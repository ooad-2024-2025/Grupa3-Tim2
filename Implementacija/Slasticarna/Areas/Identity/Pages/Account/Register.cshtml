@page
@model RegisterModel

@{
    ViewData["Title"] = "Register Basic - Pages";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="position-relative">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6 mx-4">

            <!-- Register Card -->
            <div class="card p-7">
                <!-- Logo -->
                <div class="app-brand justify-content-center mt-5">
                    <a href="/" class="app-brand-link gap-3">
                        <img src="~/img/CakeFactory.svg" alt="Slasticarna Logo" class="app-brand-logo demo">
                        <span class="app-brand-text demo text-heading fw-semibold">@ViewData["appName"]</span>
                    </a>
                </div>
                <!-- /Logo -->

                <div class="card-body mt-1">
                    <h4 class="mb-1">Adventure starts here 🚀</h4>
                    <p class="mb-5">Get your favorite cakes today!</p>

                    <form id="formAuthentication" class="mb-5" method="post">
                        <!-- Email Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.Email" class="form-control" type="text" id="email" placeholder="Enter your email" />
                            <label for="email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.Password" class="form-control" type="password" id="password" placeholder="Enter your password" />
                            <label for="password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- First Name Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.Ime" class="form-control" type="text" id="first-name" placeholder="Enter your first name" />
                            <label for="first-name">First Name</label>
                            <span asp-validation-for="Input.Ime" class="text-danger"></span>
                        </div>

                        <!-- Last Name Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.Prezime" class="form-control" type="text" id="last-name" placeholder="Enter your last name" />
                            <label for="last-name">Last Name</label>
                            <span asp-validation-for="Input.Prezime" class="text-danger"></span>
                        </div>

                        <!-- Address Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.Adresa" class="form-control" type="text" id="address" placeholder="Enter your address" />
                            <label for="address">Address</label>
                            <span asp-validation-for="Input.Adresa" class="text-danger"></span>
                        </div>

                        <!-- Phone Number Field -->
                        <div class="form-floating form-floating-outline mb-5">
                            <input asp-for="Input.BrTelefona" class="form-control" type="text" id="phone-number" placeholder="Enter your phone number" />
                            <label for="phone-number">Phone Number</label>
                            <span asp-validation-for="Input.BrTelefona" class="text-danger"></span>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="mb-5 py-2">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />
                                <label class="form-check-label" for="terms-conditions">
                                    I agree to <a href="javascript:void(0);">privacy policy & terms</a>
                                </label>
                            </div>
                        </div>

                        <button id="registerButton" class="btn btn-primary d-grid w-100 mb-5" type="submit">Sign up</button>
                    </form>


                    <p class="text-center mb-5">
                        <span>Already have an account?</span>
                        <a href="/Identity/Account/Login">
                            <span>Sign in instead</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- Register Card -->

            <img src="~/img/illustrations/tree-3.png" alt="auth-tree" class="authentication-image-object-left d-none d-lg-block">
            <img src="~/img/illustrations/auth-basic-mask-light.png" class="authentication-image d-none d-lg-block" height="172" alt="triangle-bg" data-app-light-img="illustrations/auth-basic-mask-light.png" data-app-dark-img="illustrations/auth-basic-mask-dark.png">
            <img src="~/img/illustrations/tree.png" alt="auth-tree" class="authentication-image-object-right d-none d-lg-block">

            @if (!ModelState.IsValid)
            {
                <div class="validation-summary">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-danger">@error.ErrorMessage</p>
                    }
                </div>
            }


        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
